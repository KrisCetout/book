{% extends 'base.html.twig' %}

{% block title %}{{ book.title }}{% endblock %}

{% block content %}

    <article>
        <header>
            <h1>{{ book.title }}</h1>
        </header>
        <main>
            <p>{{ book.overview}}</p>
        </main>
        <footer>
            <small>{{ book.created_at | date('d/m/Y H:i') }}</small>
        </footer>
    </article>

{% endblock %}